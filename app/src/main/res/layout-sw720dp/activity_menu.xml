<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="24dp"
    android:paddingBottom="48dp"
    android:background="@drawable/background"
    tools:context="com.desprosolutions.mathquiz.MenuActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="25dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="100dp"
                android:textColor="#FFFFFF"
                android:text="@string/textViewTitle"
                android:id="@+id/textViewTitle" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginBottom="25dp">

            <Button
                android:layout_width="190dp"
                android:layout_height="90dp"
                android:gravity="center"
                android:background="@drawable/roundbutton"
                android:textSize="@dimen/activity_horizontal_margin"
                android:textColor="#FFFFFF"
                android:text="@string/buttonPlay"
                android:id="@+id/buttonPlay" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginBottom="25dp">

            <Button
                android:layout_width="190dp"
                android:layout_height="90dp"
                android:gravity="center"
                android:background="@drawable/roundbutton"
                android:textColor="#FFFFFF"
                android:text="@string/buttonInstructions"
                android:textSize="@dimen/activity_horizontal_margin"
                android:id="@+id/buttonInstructions" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginBottom="25dp">

            <Button
                android:layout_width="190dp"
                android:layout_height="90dp"
                android:gravity="center"
                android:background="@drawable/roundbutton"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/activity_horizontal_margin"
                android:text="@string/buttonAbout"
                android:id="@+id/buttonAbout" />
        </TableRow>

    </TableLayout>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:gravity="bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id"
        android:layout_gravity="center_horizontal">
    </com.google.android.gms.ads.AdView>

</RelativeLayout>